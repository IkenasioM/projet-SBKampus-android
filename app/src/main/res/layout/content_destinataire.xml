<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="211dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ikena.sbkampus.DestinataireActivity"
    tools:showIn="@layout/activity_destinataire">


    <TextView
        android:id="@+id/label_etape1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@drawable/background_entete"
        android:textColor="@android:color/white"
        android:text="Etape 1/5" />

    <TextView
        android:id="@+id/label_destinataire"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Destinataire"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/borderblack"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/label_codemandeur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Codemandeur"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_codemandeur"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/borderblack"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@color/colorBlue"
        android:textColor="#fff"
        android:text="Suivant" />
</LinearLayout>
